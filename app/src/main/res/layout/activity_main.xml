<RelativeLayout
    android:id="@+id/mainContainer"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:background="@drawable/rounded_corners"
    android:layout_centerHorizontal="true"

    >

    <LinearLayout
        android:id="@+id/location_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/baseline_location_on_24" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="location"
            android:textColor="@color/clearWhite"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Temp_Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_card"
        android:layout_centerHorizontal="true"
        >

        <TextView

            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:text="NA"
            android:textColor="@color/clearWhite"
            android:textSize="44sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/Feelslike_Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Temp_Card"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/feelslike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feels Like "
            android:textColor="@color/clearWhite"
            android:textSize="15sp"
            />

       <TextView
           android:id="@+id/FLvalue"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="15sp"
           android:textColor="@color/clearWhite"/>


        </LinearLayout>

    <LinearLayout
        android:id="@+id/description_Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Feelslike_Card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="@color/clearWhite"
            android:textSize="20sp"/>
    </LinearLayout>

